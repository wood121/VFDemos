<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wood121.viewdemos.activity.TopbarActivity">

    <!--箭头，文字，图片-->
    <com.example.wood121.viewdemos.widget.TopBar
        android:id="@+id/tb_view1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        top:midText="标题1"
        top:rightTextDrawable="@mipmap/ic_launcher" />

    <com.example.wood121.viewdemos.widget.TopBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        top:midText="标题2"
        top:rightBtnVisible="false"
        top:title_backgroud_color="@color/colorRed" />

    <com.example.wood121.viewdemos.widget.TopBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        top:leftText="左边"
        top:midText="标题3"
        top:rightText="右边"
        top:title_backgroud_color="@color/colorGreen" />

</LinearLayout>
