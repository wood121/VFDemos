<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.charts.ChartsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_okhttp_offical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okhttp_offical" />

        <Button
            android:id="@+id/btn_retrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit" />

        <Button
            android:id="@+id/btn_rxjava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rxjava" />

        <Button
            android:id="@+id/btn_rx_retrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rx_Retrofi" />
    </LinearLayout>
</ScrollView>